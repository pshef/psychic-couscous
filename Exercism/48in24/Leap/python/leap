def leap_year(year):
    if (int(year) % 4 == 0):
        if ((int(year) % 4 == 0) and (int(year) % 100 == 0)):
            if ((int(year) % 4 == 0) and (int(year) % 400 == 0)):
                return True
            else:
                return False
        else:
            return True
    else:
        return False
